{% extends 'base.html.twig' %}

{% block title %}Hello MoviesController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>{{ title }}</h1>
    <img src="{{ asset('build/images/' ~ poster) }}" />
    <ul>
        <li><strong>Released at: </strong>{{ released_at|format_date('full') }}</li>
        <li><strong>Genres: </strong>{{ genres|join(',') }}</li>
    </ul>
</div>
{% endblock %}
